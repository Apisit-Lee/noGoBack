{
	"name": "网页滚动边界行为助手",
	"version": "0.0.1",
	"manifest_version": 2,
	"author": "Apisit Lee",
	"description": "禁用网页到达滚动边界时的跳转行为。",
	"icons": {
		"16": "images/16x16.png",
		"48": "images/48x48.png",
		"128": "images/128x128.png"
	},
	"background": {
    "persistent": true,
    "scripts": [
			"scripts/common.js",
			"scripts/background.js"
		]
  },
	"browser_action": {
		"default_title": "网页滚动边界行为助手",
		"default_icon": "images/48x48.png",
		"default_popup": "html/popup.html"
	},
	"permissions": [
		"activeTab",
		"contextMenus"
	]
}